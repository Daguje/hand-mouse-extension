{
  "name": "hand-mouse",
  "description": "HandMouse is a browser extension that lets you move the mouse cursor with hand gestures.",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js",
    "scripts": ["serviceWorker.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "danielfavero17@gmail.com"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts script-src 'self' 'wasm-unsafe-eval' 'unsafe-eval'; img-src data:"
  },
  "permissions": [
    "storage",
    "scripting",
    "notifications"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "hand-mouse",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/16x.png",
      "32": "/icons/32x.png",
      "48": "/icons/48x.png",
      "128": "/icons/128x.png"
    }
  },
  "icons": {
    "16": "/icons/16x.png",
    "32": "/icons/32x.png",
    "48": "/icons/48x.png",
    "128": "/icons/128x.png"
  }
}