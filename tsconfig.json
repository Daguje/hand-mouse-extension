{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@threads/*": ["./src/threads/*"],
      "@views/*": ["./src/views/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"],
      "@factories/*": ["./src/factories/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@models/*": ["./src/models/*"],
      "@classifiers/*": ["./src/classifiers/*"],
      "@handLandmarkDetectors/*": ["./src/handLandmarkDetectors/*"],
      "@gestures/*": ["./src/gestures/*"]
    },
    "experimentalDecorators": true
  }
}
