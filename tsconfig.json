{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@threads/*": ["./src/threads/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@classifiers/*": ["./src/classifiers/*"],
      "@handLandmarkDetectors/*": ["./src/handLandmarkDetectors/*"],
      "@gestures/*": ["./src/gestures/*"],
      "@features/*": ["./src/features/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  }
}
